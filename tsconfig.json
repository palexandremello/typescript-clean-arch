{
  "compilerOptions": {
    "outDir": "dist",
    "rootDirs": [
      "src",
      "tests"
    ],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": { "@/*": ["*"], "@/tests/*": ["../tests/*"] },
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"]
}
